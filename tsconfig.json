{
    "compilerOptions": {
        "lib": ["es6", "dom"],
        "target": "ES6",
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "removeComments": false,
        "noImplicitAny": true,
        "strictNullChecks": true
    },
    "exclude": [
        "node_modules",
        "jspm_packages"
    ]
}